<Page x:Class="TP214E.PageInventaire"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TP214E"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Inventaire">

    <Grid Background="black">
        <ListView x:Name="lstViewInventaireAliment" Margin="279,92,351,47">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="btnAjouter" Content="Ajouter un aliment" Height="40" Width="128" Background="White" Margin="467,227,205,183" Click="btnAjouter_Click" />
        <Button x:Name="btnModifierAliment" Content="Modifier aliment" Height="40" Width="128" Background="White" Margin="467,273,205,137" Click="btnModifierAliment_Click" />
        <Button x:Name="btnSupprimerAliment" Content="Supprimer aliment" Height="40" Width="128" Background="White" Margin="467,363,205,47" Click="btnSupprimerAliment_Click" />
        <TextBox x:Name="txtNombreStock" HorizontalAlignment="Left" Margin="631,141,0,0" Text="Nombre" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Ajout d'un stock" HorizontalAlignment="Left" Margin="629,105,0,0" VerticalAlignment="Top" FontSize="16" Foreground="white"/>
        <Label x:Name="lblAjoutModifierUnAliment" Content="Ajout d'un aliment" HorizontalAlignment="Left" Margin="461,105,0,0" VerticalAlignment="Top" FontSize="16" Foreground="white"/>
        <ComboBox x:Name="cbTypeAliment" HorizontalAlignment="Left" Margin="631,168,0,0" VerticalAlignment="Top" Width="120"/>
        <DatePicker x:Name="dtDateExpiration" HorizontalAlignment="Left" Margin="631,205,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtNomAliment" HorizontalAlignment="Left" Margin="471,145,0,0" Text="Nom" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtUniteAliment" HorizontalAlignment="Left" Margin="471,172,0,0" Text="Unité" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnAjouterStock" Content="Ajouter un stock" Height="40" Width="128" Background="White" Margin="629,273,43,137" Click="btnAjouterStock_Click" />
        <Button x:Name="btnModifierType" Content="Modifier un aliment" Height="40" Width="128" Background="White" Margin="467,318,205,92" IsEnabled="False" Click="btnModifierType_Click" />
        <Label Content="Aliment" HorizontalAlignment="Left" Margin="340,67,0,0" VerticalAlignment="Top" Foreground="white"/>
        <ListView x:Name="lstViewInventaireAutre" Margin="25,94,561,45">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label Content="Autre" HorizontalAlignment="Left" Margin="85,67,0,0" VerticalAlignment="Top" Foreground="white"/>
        <TextBox x:Name="txtNombreUstensile" HorizontalAlignment="Left" Margin="655,329,0,0" Text="Nombre kit " TextWrapping="Wrap" VerticalAlignment="Top" Width="72" Height="18">
            <TextBox.Style>
                <Style/>
            </TextBox.Style>
        </TextBox>
        <Button x:Name="btnAjouterUsentile" Content="Ajouter Kit" Background="White" Margin="631,363,40,47" Click="btnAjouterUsentile_Click" />
        <Label x:Name="lblTitrePage" Content="Inventaire" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="#FF5F8C5A" FontSize="36" Margin="294,0,0,0" Height="53" Width="205"/>
        <Button x:Name="retour" Content="Retour" Background="#CC5F8C5A" Margin="0,10,726,412"   BorderThickness="0.5,0.5,1.5,1.5" BorderBrush="White" RenderTransformOrigin="0,0" Foreground="White" Click="retour_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>


    </Grid>
</Page>
